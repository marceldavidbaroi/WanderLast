<% layout('layout/boilerplate') -%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h1>Create a New Listing</h1>
      <br />
      <form
        action="/listing"
        method="POST"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="title here"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Title required</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            type="text"
            name="listing[description]"
            placeholder="Description here"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Smal description required</div>
        </div>

        <!-- <div class="mb-3">
          <label for="image" class="form-label">Image URL</label>
          <input
            type="text"
            name="listing[image]"
            placeholder="image URL here"
            class="form-control"
          />
        </div> -->

        <div class="mb-3">
          <label for="image" class="form-label">Image File</label>
          <input
            type="file"
            name="listing[image]"
            placeholder="image URL here"
            class="form-control"
            required
          />
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="price" class="form-label">Price</label>
            <input
              type="text"
              name="listing[price]"
              placeholder="price here"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price required</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              placeholder="Country here"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country required</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="location here"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location required</div>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add</button>
      </form>
    </div>
  </div>
</body>
